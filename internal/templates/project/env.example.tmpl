# Server
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
SERVER_ENVIRONMENT=development
SERVER_BASE_URL=http://localhost:8080

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME={{ .ProjectName }}
DATABASE_SSLMODE=disable
DATABASE_MAX_OPEN_CONNS=25
DATABASE_MAX_IDLE_CONNS=5

# Logging
LOG_LEVEL=debug
LOG_FORMAT=console
{{- if .HasIAM }}

# Redis (required for IAM)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=change-me-in-production
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=168h

# OAuth — Google
OAUTH_GOOGLE_ENABLED=false
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_GOOGLE_REDIRECT_URL=http://localhost:8080/auth/callback/google

# OAuth — Microsoft
OAUTH_MICROSOFT_ENABLED=false
OAUTH_MICROSOFT_CLIENT_ID=
OAUTH_MICROSOFT_CLIENT_SECRET=
OAUTH_MICROSOFT_REDIRECT_URL=http://localhost:8080/auth/callback/microsoft

# OTP
OTP_CODE_LENGTH=6
OTP_EXPIRATION_TIME=5m
OTP_MAX_ATTEMPTS=3

# API Keys
API_KEY_LIVE_PREFIX=mk_live_
API_KEY_TEST_PREFIX=mk_test_
API_KEY_TOKEN_LENGTH=32

# Sessions
SESSION_EXPIRATION_TIME=720h
SESSION_CLEANUP_INTERVAL=1h
{{- end }}
{{- if .HasFSX }}

# File Storage
STORAGE_MODE=local
UPLOAD_DIR=./uploads
# AWS_REGION=us-east-1
# AWS_BUCKET={{ .ProjectName }}-uploads
{{- end }}
